<div class="flex justify-center items-center h-[500px]">
  <form id="updateContent" hx-post="auth/update" hx-include="[name=fname],[name=lname]" hx-target="body" hx-swap="none">
    <div class="bg-white ring-1 ring-slate-400 shadow-xl rounded-md w-[500px]">
      <div class="bg-[#896ab9] text-white py-3 px-3 text-xl rounded-t-md">
        Update Profile
      </div>
      <div class="flex">
        <div class="py-3 px-3">
          First name
          <input
            class="px-2 py-1 w-full border-2 border-slate-200 rounded-xl"
            type="text"
            name="fname"
            placeholder="First Name"
            required
          />
        </div>
        <div class="py-3 px-3">
          Last name
          <input
            class="px-2 py-1 w-full border-2 border-slate-200 rounded-xl"
            type="text"
            name="lname"
            placeholder="Last Name"
            required
          />
        </div>
      </div>
      <div class="flex justify-center px-4 py-3">
        <button
          class="bg-[#b29ed1] px-2 py-2 mx-4 rounded-lg text-white justify-end"
          type="submit"
          value="update"
        >
          Update Profile
        </button>
        <button
          class="bg-[#d29f3b] px-2 py-2 mx-4 rounded-lg text-white"
          type="button"
          hx-get="/quotes" hx-target="#display" hx-swap="outerHTML"
        >
          Cancel
        </button>
      </div>
    </div>
  </form>
</div>
<%- include('partials/footer') %>
