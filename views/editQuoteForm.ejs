<body>
  <div class="flex  items-center h-screen ">
    <div class="mx-auto border-2 border-slate-700  p-7 w-96 items-center rounded-md">
      <h1 class="font-bold text-4xl pb-3">Edit Quote</h1>
      <form hx-patch="/myquotes/quote/<%= quote._id %>/edit" hx-include="[name=quote], [name=author]" hx-swap="none">
        <div class="pt-4 pb-4 flex border-t-2 ">
          <label class="pr-4">Quote</label>
          <input type="text" name="quote" value="<%= quote.quote %>" class="border-2 border-slate-300 w-72  rounded-md" />
        </div>
        <div class="flex">
          <label class="pr-4">Author</label>
          <input type="text" name="author" value="<%= quote.author %>" class="border-2 border-slate-300 rounded-md w-72" />
        </div>
        <div class="flex justify-center">
          <button class="bg-blue-500 text-white rounded-md p-2 mt-4 w-fit">
            Save changes
          </button>
          <button class="bg-red-500 text-white rounded-md p-2 mt-4 ml-4">
            Cancel
          </button>
        </div>
      </form>
    </div>
  </div>
</body>